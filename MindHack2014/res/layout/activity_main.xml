<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mindhack2014.MainActivity" >

    <Button
        android:id="@+id/Inventory"
        android:layout_width="200dip"
        android:layout_height="50dip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/strInventory"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/Fight"
        android:layout_width="200dip"
        android:layout_height="50dip"
        android:layout_above="@+id/Inventory"
        android:layout_alignLeft="@+id/Inventory"
        android:text="@string/strFight"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/ScanQR"
        android:layout_width="200dip"
        android:layout_height="50dip"
        android:layout_alignLeft="@+id/Inventory"
        android:layout_below="@+id/Inventory"
        android:text="@string/strScanQR"
        android:textColor="#FFF" />

    <ImageButton
        android:id="@+id/AboutButton"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/strAboutUs"
        android:src="@drawable/abouticon" />

    <TextView
        android:id="@+id/textViewAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/AboutButton"
        android:layout_alignParentRight="true"
        android:text="@string/strAboutUs"
        android:textColor="#FFF"
        android:textSize="18sp" />

</RelativeLayout>